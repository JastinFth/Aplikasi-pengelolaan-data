<div class="mx-5 mb-5">
  <div class="bg-custom-white shadow-sm rounded-2 p-5">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">Name</th>
          <th scope="col">Role</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, no) => { %>
          <tr>
            <th scope="row"><%= no + 1 %></th>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><%= user.role %></td>
            <td>
              <button type="button" class="btn fw-semibold py-1 button-add" data-bs-toggle="modal" data-bs-target="#editModal" data-id="<%= user.id %>" data-username="<%= user.username %>" data-name="<%= user.name %>" data-password="<%= user.password %>" data-role="<%= user.role %>">
                <i class="fa-solid fa-pen-to-square me-1"></i>
                Edit
              </button>
            </td>
          </tr>
         <% }) %>
      </tbody>
    </table>
  </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-3" id="ModalLabel">Edit User</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form class="mx-4" id="editUserForm">
        <div class="modal-body">
            <input type="hidden" id="editUserId">
            <div class="mb-3">
              <label for="inputUsernameEdit" class="form-label">Username</label>
              <input type="text" class="form-control background-input" id="inputUsernameEdit" placeholder="Add Username">
            </div>
            <div class="mb-3">
              <label for="inputNameEdit" class="form-label">Name</label>
              <input type="text" class="form-control background-input" id="inputNameEdit" placeholder="Add Name" >
            </div>
            <div class="mb-3">
              <label for="inputPasswordEdit" class="form-label">Password</label>
              <input type="password" id="inputPasswordEdit" class="form-control background-input" placeholder="Add Password">
              <i class="fa-solid fa-eye position-absolute icon-eye" id="togglePwEdit"></i>
            </div>
            <div class="mb-3">
              <label for="inputRoleEdit" class="form-label">Role</label>
              <select class="form-select background-input" id="inputRoleEdit">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="deleteUserBtn">Delete</button>
            <button type="submit" class="btn button-add">Save</button>
          </div>
        </form>
      </div>
  </div>
</div>