<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="row g-0">
      <div class="col-3 side-bar vh-100">
        <div class="d-flex flex-column flex-shrink-0 p-4 shadow-sm h-100">
          <div class="d-flex flex-column align-items-center my-2">
            <img src="/images/profiles/default.jpg" class="img-thumbnail rounded-circle mb-3" id="profile-img" alt="">
            <h4><%= user.name %></h4>
            <% console.log(user) %>
            <p><%= user.role %></p>
          </div>
          <ul class="nav nav-pills flex-column mb-auto">
            <button type="button" class="btn fw-semibold my-2 py-2 button-add" data-bs-toggle="modal" data-bs-target="#addModal">
              Add User
              <i class="fa-solid fa-plus ms-2"></i>
            </button>
            <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header mx-4">
                    <h1 class="modal-title fs-3" id="ModalLabel">New User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <form class="mx-4" method="post" action="/admin/add" id="addUserForm">
                    <div class="modal-body">
                        <div class="mb-3">
                          <label for="inputUsername" class="form-label">Username</label>
                          <input type="text" class="form-control background-input" id="inputUsername" name="username" placeholder="Add Username" required>
                        </div>
                        <div class="mb-3">
                          <label for="inputName" class="form-label">Name</label>
                          <input type="text" class="form-control background-input" id="inputName" name="name" placeholder="Add Name" required>
                        </div>
                        <div class="mb-3">
                          <label for="inputPassword" class="form-label">Password</label>
                          <input type="password" id="inputPassword" class="form-control background-input" name="password" placeholder="Add Password" required>
                          <i class="fa-solid fa-eye position-absolute icon-eye" id="togglePw"></i>
                        </div>
                        <div class="mb-3">
                          <label for="inputRole" class="form-label">Role</label>
                          <select class="form-select" name="role" id="inputRole" name="role" required>
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                          </select>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn button-add">Add User</button>
                      </div>
                    </form>
                  </div>
              </div>
            </div>
            
            <li class="nav-item mt-3">
              <a href="/admin/dashboard" class="nav-link link-body-emphasis">
                <i class="fa-solid fa-gauge-high me-2"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item" >
              <a href="/admin/users" class="nav-link link-body-emphasis">
                <i class="fa-solid fa-users me-1"></i>
                Users
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/report" class="nav-link link-body-emphasis">
                <i class="fa-solid fa-file ms-1 me-2"></i>
                Report
              </a>
            </li>
          </ul>
          <div class="dropdown dropup">
            <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" id="link-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-gear fa-lg"></i>
            </a>
            <ul class="dropdown-menu text-small shadow">
              <li>
                <a class="dropdown-item text-danger" href="/logout">
                  <i class="fa-solid fa-right-from-bracket"></i>
                  Log out
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col content">
        <div class="mx-5 my-4">
          <div class="row">
            <div class="col">
              <form class="d-flex" role="search">
                <div class="input-group" id="search">
                  <span class="input-group-text" id="icon-magnifying"><i class="fa-solid fa-magnifying-glass"></i></span>
                  <input class="form-control" id="inputSearch" type="text" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
                </div>
              </form>
            </div>
            <div class="col" >
              <div class="d-flex justify-content-end">
                <button type="button" class="btn fw-semibold py-2 px-5 button-add" data-bs-toggle="modal" data-bs-target="#addModal">
                  Add New User
                  <i class="fa-solid fa-plus ms-2"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <%- body %>
      </div>
    </div>

  <script src="https://kit.fontawesome.com/0d5f99646b.js" crossorigin="anonymous"></script>
  <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>