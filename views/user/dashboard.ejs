<div class="mx-5 my-4">
  <div class="row g-0">
    <div class="col">
      <div class=" me-2 p-3 rounded-2 shadow-sm bg-custom-white">
        <h1 class="fs-5">Hai <%= user.name %>!</h1>
        <h3 class="fs-6">Selamat Datang<span class="fs-5">ðŸ‘‹</span></h3>
      </div>
    </div>
    <div class="col">
      <div class=" ms-2 p-3 rounded-2 shadow-sm bg-custom-white">
        <h1 class="fs-5">Total Dosirs</h1>
        <h2 class="fs-6"><span class="mx-2 text-success fs-5"><%= totalDosirs %></span>Dosirs</h2>
      </div>
    </div>
  </div>
</div>
<div class="mx-5 my-4">
  <div class="bg-custom-white shadow-sm rounded-2 px-5 py-4">
    <h1 class="fs-3">All Dosirs</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Notas</th>
          <th scope="col">NO. Dosir</th>
          <th scope="col">Name</th>
          <th scope="col">Shelf</th>
        </tr>
      </thead>
      <tbody>
        <% dosirs.forEach((dosir, no) => { %>
         <tr>
            <th scope="row"><%= no + 1 %></th>
            <td><%= dosir.notas %></td>
            <td><%= dosir.no_dosir %></td>
            <td><%= dosir.name %></td>
            <td><%= dosir.shelf %></td>
         </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>